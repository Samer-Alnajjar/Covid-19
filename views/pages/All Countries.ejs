<!DOCTYPE html>
<html lang="en">
  <%- include('../layout/head.ejs') %>
  <body>
    <%- include('../layout/header.ejs') %>

    <h1>Covid Statistics for all countries</h1>
    <div class="main-allcountries">
      <%data.forEach( day => { %>
        <div class="card">
          <h3 style ="color: rgb(216, 39, 216); font-weight: bolder;">Country: <%= day.country%></h3>
          <h3>Total Confirmed Cases: <%= day.totalconfirmed%></h3>
          <h3>Total Deaths Cases: <%= day.totaldeaths%></h3>
          <h3>Total Recovered Cases: <%= day.totalrecovered%></h3>
          <h3>Date: <%= day.date%></h3>
          <hr>
          <form action="/MyRecords" method="POST">
            <input type="text" name="country" value="<%= day.country%>" hidden>
            <input type="text" name="totalconfirmed" value="<%= day.totalconfirmed%>" hidden>
            <input type="text" name="totaldeaths" value="<%= day.totaldeaths%>" hidden>
            <input type="text" name="totalrecovered" value="<%= day.totalrecovered%>" hidden>
            <input type="text" name="date" value="<%= day.date%>" hidden>
            <br>
            <input type="submit" value="add-to-my-records">
          </form>
        </div>
      <%})%>
    </div>
    

    <%- include('../layout/footer.ejs') %>
  </body>
</html>
